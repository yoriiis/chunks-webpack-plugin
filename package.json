{
	"name": "chunks-webpack-plugin",
	"version": "7.0.1",
	"description": "Create HTML files with entrypoints and chunks relations to serve your bundles",
	"keywords": [
		"chunks",
		"chunks-webpack-plugin",
		"plugin",
		"split chunks",
		"webpack"
	],
	"files": [
		"src/index.ts",
		"lib/index.d.ts",
		"lib/index.js"
	],
	"homepage": "https://github.com/yoriiis/chunks-webpack-plugin",
	"bugs": "https://github.com/yoriiis/chunks-webpack-plugin/issues",
	"repository": "https://github.com/yoriiis/chunks-webpack-plugin.git",
	"license": "MIT",
	"author": "Yoriiis aka Joris DANIEL",
	"main": "./lib/index.js",
	"types": "./src/index.d.ts",
	"scripts": {
		"analyze:bundle": "webpack --config=./example/webpack.config.js --mode=production --profile --json > webpack-stats.json && webpack-bundle-analyzer ./webpack-stats.json ./ -p 1664",
		"build:example": "rm -rf ./example/dist/ && webpack --config=./example/webpack.config.js --mode=production",
		"build:tsc": "tsc",
		"coverage": "npm run test:coverage && cat ./coverage/lcov.info | coveralls",
		"inspect:example": "rm -rf ./example/dist/ && node --inspect node_modules/webpack/bin/webpack.js --config=./example/webpack.config.js --mode=development",
		"start:example": "rm -rf ./example/dist/ && webpack --config=./example/webpack.config.js --mode=development --watch",
		"test": "jest --verbose --coverage",
		"test:coverage": "jest --coverage",
		"test:eslint": "eslint . --ignore-pattern coverage --ignore-pattern reports --ignore-pattern example/dist --ignore-pattern lib",
		"test:markdown": "markdownlint '**/*.md' --ignore node_modules",
		"test:mutation": "stryker run",
		"test:watch": "jest --watchAll --coverage"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run test:eslint && npm run test:markdown && npm run test && npm run build:tsc"
		}
	},
	"babel": {
		"plugins": [
			"babel-plugin-dynamic-import-node"
		],
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8.11.2"
					}
				}
			],
			[
				"@babel/preset-typescript"
			]
		]
	},
	"prettier": {
		"printWidth": 100,
		"useTabs": true,
		"semi": true,
		"trailingComma": "none",
		"singleQuote": true,
		"arrowParens": "always",
		"overrides": [
			{
				"files": "*.md",
				"options": {
					"proseWrap": "preserve",
					"tabWidth": 2,
					"useTabs": false,
					"singleQuote": true
				}
			}
		]
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true,
			"jest": true,
			"node": true
		},
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaFeatures": {
				"impliedStrict": true,
				"experimentalObjectRestSpread": true
			},
			"ecmaVersion": 6,
			"sourceType": "module"
		},
		"extends": "standard",
		"rules": {
			"indent": [
				"error",
				"tab",
				{
					"ignoredNodes": [
						"TemplateLiteral > *"
					]
				}
			],
			"no-console": 0,
			"no-tabs": 0,
			"semi": [
				1,
				"always"
			],
			"space-before-function-paren": [
				"error",
				{
					"anonymous": "never",
					"named": "never",
					"asyncArrow": "always"
				}
			]
		},
		"globals": {
			"document": false,
			"window": false
		}
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"modulePaths": [
			"./src"
		],
		"preset": "ts-jest/presets/js-with-babel",
		"resetModules": true,
		"verbose": true
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/core": "^7.12.3",
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-typescript": "^7.12.1",
		"@stryker-mutator/babel-transpiler": "^4.0.0",
		"@stryker-mutator/core": "^4.1.0",
		"@stryker-mutator/javascript-mutator": "^4.0.0",
		"@stryker-mutator/jest-runner": "^4.1.0",
		"@stryker-mutator/typescript": "^4.0.0",
		"@stryker-mutator/webpack-transpiler": "^4.0.0",
		"@types/fs-extra": "^9.0.2",
		"@types/jest": "^26.0.15",
		"@types/node": "^14.14.6",
		"@types/tapable": "^1.0.6",
		"@types/webpack": "^4.41.24",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.1.0",
		"babel-plugin-dynamic-import-node": "^2.3.3",
		"coveralls": "^3.1.0",
		"css-loader": "^5.0.0",
		"css-minimizer-webpack-plugin": "^1.1.5",
		"eslint": "^7.12.1",
		"eslint-config-standard": "^16.0.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.2",
		"husky": "^4.3.0",
		"jest": "^26.6.3",
		"markdownlint-cli": "^0.24.0",
		"mini-css-extract-plugin": "^1.2.1",
		"prettier-eslint": "^11.0.0",
		"sanitize.css": "^12.0.1",
		"terser-webpack-plugin": "^5.0.3",
		"ts-jest": "^26.4.3",
		"typescript": "^4.0.5",
		"vlitejs": "^3.0.4",
		"webpack": "^5.4.0",
		"webpack-bundle-analyzer": "^3.9.0",
		"webpack-cli": "^4.1.0"
	},
	"peerDependencies": {
		"webpack": "^4.0.0 || ^5.0.0"
	},
	"engines": {
		"node": ">=10.13.0"
	}
}