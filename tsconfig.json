{
	"compilerOptions": {
		"strict": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "esnext",
		"lib": ["ESNext"],
		"outDir": "./lib",
		"declaration": true,
		"declarationDir": "types",
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*"]
}
