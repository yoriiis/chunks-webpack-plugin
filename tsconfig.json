{
	"compilerOptions": {
		"moduleResolution": "node",
		"outDir": "./lib",
		"allowJs": true,
		"checkJs": true,
		"target": "es5",
		"lib": ["es2017"],
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true
	},
	"types": ["node"],
	"include": ["./src/**/*"],
	"exclude": ["./src/__tests__", "./src/__mocks__"]
}
