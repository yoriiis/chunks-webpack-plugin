{
	"compilerOptions": {
		"moduleResolution": "node",
		"outDir": "./lib",
		"allowJs": true,
		"checkJs": false,
		"target": "es2017",
		"lib": ["es2017"],
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "types",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"resolveJsonModule": true
	},
	"types": ["node"],
	"include": ["./src/**/*"]
}
